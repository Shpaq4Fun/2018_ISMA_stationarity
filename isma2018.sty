\setlength{\paperheight}     {297mm} %
\setlength{\paperwidth}      {210mm} %
\setlength{\textwidth}       {166mm} %
\setlength{\hoffset}       {-3.04mm} %
\setlength{\oddsidemargin}     {0mm} %
\setlength{\voffset}         {4.6mm} %
\setlength{\topmargin}         {0mm} %
